{
  "name": "@sciol/xyzen",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "version": "0.3.17",
  "description": "A modern, lightweight, and extensible chat component for React.",
  "author": "Haohui <harveyque@outlook.com>",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/ScienceOL/Xyzen.git"
  },
  "homepage": "https://bohrium.com/apps/xyzen",
  "keywords": [
    "react",
    "chat",
    "component",
    "xyzen"
  ],
  "main": "./dist/xyzen.umd.js",
  "module": "./dist/xyzen.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/xyzen.es.js",
      "require": "./dist/xyzen.umd.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "vite": "^5.2.0 || ^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 32233 --strictPort",
    "build": "rimraf site && tsc -b && vite build",
    "build:bohr_app": "VITE_XYZEN_BACKEND_URL='https://chat.sciol.ac.cn' VITE_XYZEN_LAYOUT_STYLE='fullscreen' yarn build && mkdir -p tmp && zip -r tmp/$(date +'%Y%m%d-%H%M%S').zip site/*",
    "build:lib": "rimraf dist && cross-env BUILD_MODE=library vite build",
    "image:bohr": "docker buildx build . --build-arg VITE_XYZEN_BACKEND_URL=https://uni-xyzen.test.bohrium.com --platform linux/amd64 -t registry.dp.tech/public/xyzen-web:latest --push",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "preview": "vite preview",
    "publish": "yarn npm publish",
    "prettier": "prettier --write .",
    "shadcn": "yarn dlx shadcn@latest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@emotion/is-prop-valid": "^1.3.1",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@zumer/snapdom": "^2.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.5",
    "framer-motion": "^12.23.9",
    "html2canvas": "^1.4.1",
    "immer": "^10.1.1",
    "katex": "^0.16.22",
    "lucide-react": "^0.554.0",
    "mini-svg-data-uri": "^1.4.4",
    "motion": "^12.23.24",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react-image-crop": "^11.0.10",
    "react-markdown": "^10.1.0",
    "react-use-measure": "^2.1.7",
    "react-use-websocket": "^4.13.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "shiki": "^3.15.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.8"
  }
}
