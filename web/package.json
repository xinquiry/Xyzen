    "dev": "vite --host 0.0.0.0 --port 32233 --strictPort",
    "build": "rimraf site && tsc -b && cross-env VITE_XYZEN_LAYOUT_STYLE='fullscreen' vite build",
    "build:bohr_app": "BUILD_MODE=iframe VITE_XYZEN_BACKEND_URL='https://chat.sciol.ac.cn' VITE_XYZEN_LAYOUT_STYLE='fullscreen' yarn build && mkdir -p tmp && zip -r tmp/$(date +'%Y%m%d-%H%M%S').zip site/*",
    "build:lib": "rimraf dist && cross-env BUILD_MODE=library vite build",
    "image:bohr": "docker buildx build . --build-arg VITE_XYZEN_BACKEND_URL=https://uni-xyzen.test.bohrium.com --platform linux/amd64 -t registry.dp.tech/public/xyzen-web:latest --push",
