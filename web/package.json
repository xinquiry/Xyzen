    "type-check": "tsc -p tsconfig.app.json --noEmit",
    "test": "vitest",
    "preview": "vite preview",
    "publish": "yarn npm publish",
    "prettier": "prettier --write .",
    "shadcn": "yarn dlx shadcn@latest"
